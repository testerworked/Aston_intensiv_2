<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/stripeRed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#C60C30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/stripeWhite"
        app:layout_constraintHeight_percent="0.45"/>

    <View
        android:id="@+id/stripeWhite"
        android:layout_width="670dp"
        android:layout_height="31dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/stripeRed2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stripeRed" />

    <View
        android:id="@+id/stripeRed2"
        android:layout_width="675dp"
        android:layout_height="337dp"
        android:background="#C60C30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stripeWhite" />

    <View
        android:id="@+id/crossHorizontal"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.02"/>

    <View
        android:id="@+id/crossVertical"
        android:layout_width="41dp"
        android:layout_height="778dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.281"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.746"
        app:layout_constraintWidth_percent="0.02" />


</androidx.constraintlayout.widget.ConstraintLayout>