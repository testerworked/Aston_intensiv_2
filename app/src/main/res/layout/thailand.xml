<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <View
        android:id="@+id/stripeRed0"
        android:layout_width="890dp"
        android:layout_height="309dp"
        android:background="@color/redTh"
        app:layout_constraintBottom_toTopOf="@+id/stripeWhite0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.333"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/stripeWhite0"
        android:layout_width="881dp"
        android:layout_height="281dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/stripeBlue"
        app:layout_constraintHeight_percent="0.333"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/stripeBlue"
        android:layout_width="880dp"
        android:layout_height="538dp"
        android:background="@color/blueTh"
        app:layout_constraintBottom_toTopOf="@+id/stripeWhite"
        app:layout_constraintHeight_percent="0.333"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/stripeWhite"
        android:layout_width="0dp"
        android:layout_height="280dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/stripeRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.333"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/stripeRed"
        android:layout_width="883dp"
        android:layout_height="316dp"
        android:background="@color/redTh"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.16"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>